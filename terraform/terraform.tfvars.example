# AWS Configuration
aws_region        = "us-east-1"
availability_zone = "us-east-1a"
environment       = "prod"

# EC2 Instance Configuration
instance_type      = "t3.large"    # Options: t3.medium, t3.large, t3.xlarge, t3.2xlarge
data_volume_size   = 50            # Size in GB for persistent data storage

# SSH Access Configuration
# IMPORTANT: Restrict this to your IP address for security!
# Find your IP: curl ifconfig.me
ssh_allowed_cidrs = ["0.0.0.0/0"]  # Change to ["YOUR_IP/32"] for production

# API Access Configuration
api_allowed_cidrs = ["0.0.0.0/0"]  # Open to all, or restrict as needed

# Monitoring Access Configuration
monitoring_allowed_cidrs = ["0.0.0.0/0"]  # Consider restricting in production

# SSH Key Configuration
# Option 1: Use existing key pair
existing_key_name = ""  # Leave empty to create new key pair

# Option 2: Create new key pair (required if existing_key_name is empty)
# Generate key: ssh-keygen -t rsa -b 4096 -f ~/.ssh/rala-api-key
# Then paste the PUBLIC key content here:
ssh_public_key = ""

# Application Configuration
anthropic_api_key = "your-anthropic-api-key-here"

# Git Repository Configuration
git_repo_url = "https://github.com/yourusername/event-collaboration-api.git"
git_branch   = "main"
